{% extends 'base.html.twig' %}

{% block title %}Liste des condidats{% endblock %}

{% block body %}
<h2>Liste des Candidats | <small> <a href="{{ path('ajouter')}}">Ajouter</a></small></h2>
{% for msg in app.flashes('notice') %}
    {{ msg }}
{% endfor %}
    <table class="table table-hover table-striped" border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom & Prénom</th>
                <th>Contenu</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for candidat in lesCandidats %}
            <tr>
                <td>{{ candidat.id }}</td>
                <td>{{ candidat.candidat | upper }}</td>
                <td>{{ candidat.date | date('d/m/Y') }}</td>
                <td>{{ candidat.contenu }}</td>
                <td>
                    <a href="#" class="btn btn-primary">Voir</a>
                    <a href="{{ path('edit_user', {'id':candidat.id }) }}" class="btn btn-info">Modifier</a>
                    <a href="{{ path('cand_delete', {'id':candidat.id }) }}" class="btn btn-danger" onclick="return confirm('Are you sure to delete!{{ candidat.candidat}}')">Supprimer</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5">Aucun abonné</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}